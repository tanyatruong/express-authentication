<div class="container">
    <h1>Edit Contact</h1>

    <form action="/contact-list/edit/<%= ContactDetail._id %>" method="POST">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= ContactDetail.name %>" required>
        </div>

        <div class="form-group">
            <label for="phoneNumber">Phone Number:</label>
            <input type="text" class="form-control" id="phoneNumber" name="phoneNumber"
                value="<%= ContactDetail.phoneNumber %>" required>
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" name="email" value="<%= ContactDetail.email %>" required>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a href="/contact-list" class="btn btn-secondary">Cancel</a>
    </form>
</div>